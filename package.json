{
  "name": "paas-admin",
  "private": true,
  "version": "0.1.0",
  "description": "GOV.UK PaaS CloudFoundry UI",
  "main": "src/main.ts",
  "repository": "https://github.com/alphagov/paas-admin",
  "scripts": {
    "build": "npm run -s clean && webpack --config config/webpack.config.js",
    "watch": "ENABLE_WATCH=true ENABLE_TESTS=true npm run -s build",
    "test": "ENABLE_COVERAGE=true npm run -s test:unit && npm run -s lint && npm run -s test:vulnerabilities",
    "test:unit": "jest --coverage",
    "test:audit": "npm audit",
    "test:vulnerabilities": "if npm audit | grep -E -B9999 '\\d+\\s+(high|critical)'; then npm audit; else exit 0; fi",
    "test:acceptance": "ts-mocha --exit acceptance-tests/**/*.test.ts",
    "lint": "npm run -s lint:ts && npm run -s lint:sass",
    "lint:ts": "tslint --format codeFrame -p .",
    "lint:sass": "sass-lint -v",
    "fix": "npm run -s fix:js",
    "fix:ts": "tslint -p . --fix",
    "fix:sass": "sass-lint --fix ./src",
    "fix:vulnerabilities": "npm audit fix --update-binary",
    "start": "export PORT=${PORT-3000}; export LOG_LEVEL=${LOG_LEVEL-warn}; if [ \"$NODE_ENV\" = 'production' ]; then npm run -s start:production; else npm run -s start:dev; fi",
    "start:dev": "NODE_ENV=development ENABLE_WATCH=true ENABLE_SERVER=true ALLOW_INSECURE_SESSION=true npm run -s build | pino-pretty",
    "start:stub-api": "STUB_API_PORT=${STUB_API_PORT-1337} PORT=${PORT-3000} ts-node stub-api/index.ts",
    "start:with-stub-api": "STUB_API_PORT=${STUB_API_PORT-1337}; API_URL=http://0:${STUB_API_PORT} BILLING_URL=http://0:${STUB_API_PORT} ACCOUNTS_URL=http://0:${STUB_API_PORT} UAA_URL=http://0:${STUB_API_PORT} OAUTH_CLIENT_ID=my-client-id OAUTH_CLIENT_SECRET=my-secret ACCOUNTS_SECRET=my-accounts-secret NOTIFY_API_KEY=qwerty123456 NOTIFY_WELCOME_TEMPLATE_ID=qwerty123456 AWS_REGION=eu-west-2 npm start",
    "start:production": "NODE_ENV=production ALLOW_INSECURE_SESSION=true npm run -s build && node dist/main.js | pino-pretty",
    "push": "NODE_ENV=production npm run -s build && cf push",
    "clean": "rm -rf dist/* || echo 'already clean'"
  },
  "author": "GOV.UK PaaS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/csurf": "^1.9.35",
    "@types/express": "4.16.0",
    "@types/helmet": "0.0.38",
    "@types/jest": "23.3.1",
    "@types/jsonwebtoken": "8.3.2",
    "@types/moment": "2.13.0",
    "@types/nock": "9.3.0",
    "@types/passport": "0.4.6",
    "@types/passport-oauth2": "1.4.5",
    "@types/pino": "4.16.1",
    "@types/qs": "6.5.1",
    "@types/route-parser": "0.1.1",
    "@types/source-map-support": "0.4.1",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "3.4.3",
    "@types/webpack-env": "1.13.9",
    "compression-webpack-plugin": "1.1.11",
    "css-loader": "1.0.0",
    "expect": "^24.7.1",
    "extract-loader": "2.0.1",
    "file-loader": "3.0.1",
    "glob": "7.1.2",
    "html-loader": "0.5.5",
    "identity-obj-proxy": "3.0.0",
    "imports-loader": "0.8.0",
    "istanbul-instrumenter-loader": "3.0.1",
    "jest": "23.5.0",
    "loader-utils": "1.2.3",
    "mocha": "^5.2.0",
    "nock": "10.0.6",
    "node-sass": "^4.11.0",
    "nodemon-webpack-plugin": "^4.0.3",
    "npm": "^6.4.1",
    "nyc": "12.0.2",
    "postcss-loader": "3.0.0",
    "postcss-url": "8.0.0",
    "regexp-replace-loader": "1.0.1",
    "sass-lint": "1.12.1",
    "sass-loader": "7.1.0",
    "schema-utils": "1.0.0",
    "supertest": "3.1.0",
    "tap": "12.0.1",
    "ts-jest": "23.1.3",
    "ts-loader": "4.4.2",
    "ts-node": "^7.0.0",
    "ts-mocha": "^6.0.0",
    "tslint": "5.16.0",
    "tslint-consistent-codestyle": "1.13.3",
    "tslint-immutable": "5.5.2",
    "tslint-microsoft-contrib": "5.2.0",
    "typescript": "3.4.3",
    "url-loader": "1.1.0",
    "webpack": "4.30.0",
    "webpack-cli": "3.1.0",
    "webpack-node-externals": "1.7.2",
    "webpack-shell-plugin": "0.5.0",
    "zombie": "^6.1.3"
  },
  "dependencies": {
    "axios": "0.18.0",
    "compression": "1.7.3",
    "cookie-session": "2.0.0-beta.3",
    "csurf": "^1.9.0",
    "express": "4.16.3",
    "express-pino-logger": "4.0.0",
    "express-static-gzip": "1.1.1",
    "govuk-frontend": "^2.10.0",
    "helmet": "3.13.0",
    "jmespath": "0.15.0",
    "jsonwebtoken": "8.5.1",
    "merge-deep": "3.0.2",
    "moment": "2.22.2",
    "notifications-node-client": "^4.2.0",
    "nunjucks": "3.1.3",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "passport-oauth2": "1.4.0",
    "pino": "5.1.0",
    "pino-pretty": "^2.0.1",
    "qs": "6.5.2",
    "route-parser": "0.0.5",
    "showdown": "1.8.6",
    "source-map-support": "0.5.8",
    "tslib": "1.9.3",
    "uuid": "3.3.2"
  },
  "engines": {
    "node": "8.x.x",
    "npm": ">=5.x.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.+.njk",
      "<rootDir>/config/",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(css|scss|sass)$": "identity-obj-proxy",
      "^.+\\.(html|njk)$": "<rootDir>/config/jest/njk.js",
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/file.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|tsx|js|jsx)"
    ]
  }
}
