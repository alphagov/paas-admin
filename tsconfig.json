{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "pretty": true,
    "allowJs": true,
    "importHelpers": true,
    "outDir": "dist",
    "jsx" :  "react",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
}
